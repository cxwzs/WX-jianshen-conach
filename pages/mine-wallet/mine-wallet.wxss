/* pages/mine-wallet/mine-wallet.wxss */
.box{
  width: 100%;
}
/* top */
.top{
  width: 100%;
  background-color: #fff;
}
.top-bt{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.top-num{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx 60rpx 30rpx;
  display: flex;
  justify-content: center;
}
.top-num>view{
  font-size: 82rpx;
  font-weight:400;
  color:rgba(236,37,37,1);
}
.top-num>text{
 display: block;
  font-size: 48rpx;
  font-weight:400;
  color:rgba(236,37,37,1);
  margin-top: 38rpx;
}
/* 按钮 */
.btn{
  width: 100%;
  margin-top: 2rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.btn-nr{
  width: 50%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.btn-nr:nth-of-type(1){
  box-sizing: border-box;
  border-right: 2rpx solid #f6f6f6;
}
/* 收支明细 */
.list{
  width: 100%;
  margin-top: 20rpx;
}
.list-bt{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #fff;
  font-size: 30rpx;
  font-weight:400;
  color:rgba(158,158,158,1);
  margin-bottom: 2rpx;
}
.list-item{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 2rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list-item-left{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.list-item-left>view{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.list-item-left>text{
  font-size: 26rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.list-item-right>text{
  font-size: 34rpx;
  font-weight:400;
}
.list-item-right>.list-item-red{
  color:rgba(236,37,37,1);
}
.list-item-right>.list-item-black{
  color:#333;
}