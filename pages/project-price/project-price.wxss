/* pages/project-price/project-price.wxss */
.box{
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 160rpx;
}
/* 按钮 */
.btn{
  width: 100%;
  height:98rpx;
  background:rgba(255,55,51,1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color:rgba(255,255,255,1);
  position: fixed;
  z-index: 99;
  bottom: 0;
  left: 0;
  right: 0;
}
/* 列表 */
.list{
  width: 100%;
}
.list-item{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.list-content{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list-content>input{
  width: 48%;
  font-size: 30rpx;
  font-weight:400;
  color: #333;
}
.list-content>input:last-of-type{
  text-align: right;
}
.inps{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
/* 添加按钮 */
.add{
  width: 100%;
  height:100rpx;
  background:rgba(255,255,255,1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color:rgba(236,37,37,1);
  margin-top: 20rpx;
}