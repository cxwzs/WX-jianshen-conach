/* pages/add-project/add-project.wxss */
.box{
  width: 100%;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding-bottom: 160rpx;
}
/* 菜单 */
.menu{
  width: 100%;
  height: 104rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #f6f6f6;
  background-color: #fff;
}
.menu>text{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-right: 25rpx;
}
.menu>input{
  flex: 1;
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  text-align: right;
}
.inps{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.menu-right{
  display: flex;
  align-items: center;
}
.menu-right>text{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-right: 25rpx;
}
.menu-right>image{
  width: 20rpx;
  height: 30rpx;
}
/* 上传 */
.shagnchuan{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  margin-top: 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
.shagnchuan>text{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.shagnchuan>image{
  width: 267rpx;
  height: 150rpx;
}
.shagnchuan>video{
  width: 267rpx;
  height: 150rpx;
}
.shagnchuan>.del{
  position: absolute;
  width: 45rpx;
  height: 45rpx;
  z-index: 99;
  right: 290rpx;
  top: 20rpx;
}
/* 按钮 */
.btn{
  width: 100%;
  height:98rpx;
  background:rgba(255,55,51,1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color:rgba(255,255,255,1);
  position: fixed;
  z-index: 99;
  bottom: 0;
  left: 0;
  right: 0;
}