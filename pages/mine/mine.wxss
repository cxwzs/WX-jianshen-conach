/* pages/mine/mine.wxss */
.box{
  width: 100%;
}
.top{
  width: 100%;
  height: 256rpx;
  position: relative;
  z-index: 1;
}
.top-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 2;
}
.top-content{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 3;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.top-nr{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  position: relative;
}
.top-nr>.user-tx{
  width: 110rpx;
  height: 110rpx;
  margin-right: 20rpx;
}
.top-nr>.more{
  width: 20rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
}
.top-nr-text{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.top-prize{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.top-prize>text{
  font-size: 26rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.top-name{
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.top-name>text{
  font-size: 34rpx;
  color:rgba(255,255,255,1);
}
.top-name>view{
  width:105rpx;
  height:30rpx;
  box-sizing: border-box;
  border:2rpx solid #fff;
  border-radius:4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color:#fff;
  margin-left: 15rpx;
}
/* 菜单 */
.list{
  width: 100%;
}
.list-item{
  width: 100%;
  height: 104rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
  background-color: #fff;
}
.list-item>image{
  width: 20rpx;
  height: 32rpx;
}
.list-nr{
  display: flex;
  align-items: center;
}
.list-nr>image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}
.list-nr>text{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}