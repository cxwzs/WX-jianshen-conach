/* pages/reserve-complete/reserve-complete.wxss */
.box{
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 120rpx;
  margin-top: 20rpx;
}
/* 上传图 */
.pingjia{
  width: 100%;
  margin-top: 2rpx;
  box-sizing: border-box;
  padding: 30rpx;
  background: #fff;
}
.sc-img{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.sc-img-item{
  width: 100%;
  display: grid;
  grid-template-columns: repeat(4, 165rpx);
  grid-row-gap: 10rpx;
  grid-column-gap: 10rpx;
}
.sc-img>text{
  display: block;
  font-size: 26rpx;
  color:rgba(153,153,153,1);
  margin-top: 25rpx;
}
.sc-img-nr{
  height: 165rpx;
  position: relative;
  z-index: 1;
}
.sc-img-nr>.imgs{
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 2;
}
.sc-img-nr>.del-img{
  position: absolute;
  z-index: 3;
  width: 29rpx;
  height: 29rpx;
  top: -5rpx;
  right: -5rpx;
}
/* 按钮 */
.btn{
  width: 100%;
  height:98rpx;
  background:rgba(251,59,57,1);
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  font-size: 32rpx;
  color:rgba(255,255,255,1);
}