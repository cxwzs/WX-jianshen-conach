/* pages/shenqing-tixian/shenqing-tixian.wxss */
.box{
  width: 100%;
  margin-top: 20rpx;
}
/* 可提现金额 */
.money{
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 2rpx;
}
.money>view{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-right: 30rpx;
}
.money>text{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(236,37,37,1);
}
/* 提现金额 */
.num{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #fff;
}
.num>view{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-right: 30rpx;
}
.num>input{
  flex: 1;
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.inps{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.tsy{
  width: 100%;
  box-sizing: border-box;
  padding: 25rpx 30rpx;
  font-size: 24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  text-align: justify;
}
/* 按钮 */
.btn{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-top: 80rpx;
}
.btn-nr{
  width: 100%;
  height:88rpx;
  background:linear-gradient(0deg,rgba(251,59,57,1),rgba(255,161,148,1));
  border-radius:44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color:rgba(255,255,255,1);
}