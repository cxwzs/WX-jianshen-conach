/* pages/order/order.wxss */
.box{
  width: 100%;
}
/* 导航 */
.nav{
  width: 100%;
  display: flex;
  align-items: center;
  position: fixed;
  /* top: 0; */
  left: 0;
  right: 0;
  z-index: 99;
  background-color: #fff;
  box-sizing: border-box;
  border-top: 2rpx solid #f6f6f6;
}
.nav-nr{
  width: 25%;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 78rpx;
  position: relative;
}
.nav-nr>text{
  font-size: 26rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.nav-active>text{
  color:rgba(236,37,37,1);
}
.nav-nr-border{
  position: absolute;
  bottom: 0;
  width:48rpx;
  height:5rpx;
  background:rgba(236,37,37,1);
  border-radius:3rpx;
  display: none;
}
.nav-nr-border-active{
  display: block !important;
}
.nav-nr-num{
  position: absolute;
  width:32rpx;
  height:20rpx;
  background:linear-gradient(0deg,rgba(251,59,57,1),rgba(255,161,148,1));
  border-radius:10rpx 10rpx 10rpx 2rpx;
  top: 10rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
}
/* 订单列表 */
.list{
  width: 100%;
  margin-top: 98rpx;
}
.list-item{
  width: 100%;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.list-order-bt{
  width: 100%;
  height: 86rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f6f6f6;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list-order-bt>view{
  font-size: 28rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.list-order-bt>text{
  font-size: 28rpx;
  font-weight:400;
  color:rgba(236,37,37,1);
}
.order-content{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}
.order-nr{
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
}
.order-nr>image{
  width: 267rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.order-text{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  position: relative;
}
.order-name{
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 30rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-top: 5rpx;
}
.order-time{
  margin-top: 10rpx;
  font-size: 24rpx;
  font-weight:400;
  color:rgba(64,67,85,1);
}
.order-price{
  position: absolute;
  bottom: 2rpx;
  font-size: 36rpx;
  color:rgba(236,37,37,1);
}
.order-bottom{
  width: 100%;
  box-sizing: border-box;
  border-top: 2rpx solid #f6f6f6;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.order-bottom-price{
  display: flex;
  align-items: center;
}
.order-bottom-price>text{
  font-size: 28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.order-bottom-price>view{
  font-size: 28rpx;
  font-weight:400;
  color:#FF3733;
}
.order-bottom-btn{
  display: flex;
  align-items: center;
}
.order-bottom-btn>view{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}
.btn-border{
  width:138rpx;
  height:50rpx;
  box-sizing: border-box;
  border:2rpx solid rgba(234,234,234,1);
  border-radius:25rpx;
  font-size: 24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.btn-bg{
  width:138rpx;
  height:50rpx;
  background:linear-gradient(0deg,rgba(251,59,57,1),rgba(255,161,148,1));
  border-radius:25rpx;
  font-size: 24rpx;
  font-weight:bold;
  color:rgba(248,248,248,1);
}

/* 取消订单弹窗 */
.model{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}
.model-nr{
  width: 100%;
  /* height: 0;
  overflow: hidden;
  transition: 0.8s; */
}
/* .model-active{
  height: 100% !important;
} */
.model-btn{
  width: 100%;
  height: 98rpx;
  background:rgba(236,37,37,1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
}
.model-content{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  background:rgba(255,255,255,1);
  border-radius:20rpx 20rpx 0rpx 0rpx;
}
.model-content-bt{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.model-content-bt>text{
  font-size: 32rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.model-content-bt>image{
  position: absolute;
  right: 0;
  width: 24rpx;
  height: 24rpx;
}
.model-list{
  width: 100%;
  margin-top: 70rpx;
}
.model-list-item{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f6f6f6;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.model-list-item>text{
  font-size: 28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.model-list-item>image{
  width: 36rpx;
  height: 36rpx;
}