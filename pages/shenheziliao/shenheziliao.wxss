/* pages/shenheziliao/shenheziliao.wxss */
.box{
  width: 100%;
}
.biaoti{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  height: 74rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.menu{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #f6f6f6;
}
.menu>text{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-right: 20rpx;
}
.menu>image{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.menu>input{
  flex: 1;
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  text-align: right;
}
.inps{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.menu-nr{
  display: flex;
  align-items: center;
}
.menu-checkbox-nr{
  display: flex;
  align-items: center;
  margin-left: 50rpx;
}
.menu-checkbox-nr>image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.menu-checkbox-nr>text{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.menu-checkbox-nr>.checkbox-active{
  font-size: 30rpx;
  font-weight:400;
  color:#333;
}
.menu-zhengjian{
  display: flex;
  align-items: center;
}
.menu-zhengjian>view{
  font-size: 30rpx;
  font-weight:400;
  color:#333; 
}
.menu-zhengjian>image{
  width: 20rpx;
  height: 32rpx;
  margin-left: 25rpx;
}
.btn{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.btn-nr{
  width: 100%;
  height:88rpx;
  background:linear-gradient(0deg,rgba(251,59,57,1),rgba(255,161,148,1));
  border-radius:44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color:rgba(255,255,255,1);
  margin-bottom: 30rpx;
  position: relative;
  z-index: 2;
}
.btn-nr>button{
  width: 100% !important;
  height: 100% !important;
  padding: 0 !important;
  margin: 0 !important;
  position: absolute;
  z-index: 9;
  border: none !important;
}
.btn-text{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.btn-text>text{
  font-size: 24rpx;
  font-weight:400;
  color: #EC2525;
}

/* 弹窗 */

.model {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mdoel-hide {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 3;
  width: 100%;
  height: 100%;
}

.model-nr {
  width: 484rpx;
  height: 585rpx;
  position: relative;
  z-index: 4;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.model-nr>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 5;
}

.model-nr-center {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 6;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.model-nr-text {
  width: 420rpx;
  text-align: justify;
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(236, 37, 37, 1);
  position: absolute;
  bottom: 197rpx;
}

.model-nr-btn {
  width: 290rpx;
  height: 80rpx;
  background: linear-gradient(0deg, rgba(251, 59, 57, 1), rgba(255, 161, 148, 1));
  border-radius: 40rpx;
  position: absolute;
  bottom: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.model-nr-btn>text{
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}
.model-nr-btn>button{
  position: absolute;
  width: 100% !important;
  height: 100% !important;
  border: none !important;
  z-index: 99;
  padding: 0 !important;
}
.close-img {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  bottom: -100rpx;
}
