/* pages/login/login.wxss */
.box{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30rpx;
}
.logo{
  width: 200rpx;
  height: 200rpx;
  margin-top: 100rpx;
  margin-bottom: 70rpx;
}
.logo>image{
  width: 100%;
  height: 100%;
}
.menu{
  width: 84%;
  box-sizing: border-box;
  padding: 10rpx;
  border-bottom: 2rpx solid #DDDDDD;
  margin-top: 50rpx;
}
.menu-item{
  width: 100%;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.menu-item>image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}
.menu-item>input{
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.inps{
  font-size: 28rpx;
  color:rgba(202,202,202,1);
}
.menu-btn{
  height: 100%;
  box-sizing: border-box;
  padding-left: 25rpx;
  border-left: 2rpx solid #DDDDDD;
  font-size: 28rpx;
  font-weight:400;
  color:rgba(236,37,37,1);
  margin-left: 20rpx;
}
.btn{
  width:690rpx;
  height:88rpx;
  background:linear-gradient(0deg,rgba(251,59,57,1),rgba(255,161,148,1));
  border-radius:44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color:rgba(255,255,255,1);
  margin-top: 80rpx;
}