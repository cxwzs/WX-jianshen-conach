/**index.wxss**/
.box{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 添加项目按钮 */
.btn{
  width:450rpx;
  height:88rpx;
  background:linear-gradient(0deg,rgba(251,59,57,1),rgba(255,161,148,1));
  border-radius:44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  z-index: 99;
  bottom: 50rpx;
  font-size: 32rpx;
  color:rgba(255,255,255,1);
}
/* 项目列表 */
.list{
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 180rpx;
}
.list-item{
  width: 100%;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.list-content{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  border-bottom: 2rpx solid #f6f6f6;
}
.list-content-nr{
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
}
.list-content-nr>image{
  width: 267rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.list-content-text{
  flex: 1;
  height: 100%;
  position: relative;
}
.project-name{
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 30rpx;
  color:rgba(51,51,51,1);
  margin-top: 5rpx;
}
.project-price{
  position: absolute;
  bottom: 5rpx;
  font-size: 36rpx;
  color:rgba(236,37,37,1);
}
.list-btn{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx;
}
.btn-left{
  display: flex;
  align-items: center;
}
.btn-left-nr{
  display: flex;
  align-items: center;
}
.btn-left-nr>image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}
.btn-left-nr>text{
  font-size: 26rpx;
  color:rgba(51,51,51,1);
}
.btn-right{
  display: flex;
  align-items: center;
}
.btn-right-nr{
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}
.btn-right-nr>image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}
.btn-right-nr>text{
  font-size: 26rpx;
  color:rgba(51,51,51,1);
}