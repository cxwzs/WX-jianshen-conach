/* pages/userinfo/userinfo.wxss */
.box{
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 180rpx;
}
/* 头像 */
.tx{
  width: 100%; 
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 88rpx;
  margin-bottom: 50rpx;
}
.tx-center{
  position: relative;
  z-index: 1;
}
.tx-img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: relative;
  z-index: 2;
}
.camera{
  width: 68rpx;
  height: 68rpx;
  position: absolute;
  z-index: 3;
  bottom: -10rpx;
  right: -10rpx;
}

.menu{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #fff;
  margin-bottom: 2rpx;
}
.menu-content{
  width: 100%;
  height: 104rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.menu-content>text,input{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  text-align: right;
}
.menu-content>input{
  flex: 1;
}
.inps{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}

/* 奖项 */
.jiangxiang{
  width: 100%;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #fff;
}
.jiangxinang-content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.jx-bt{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f6f6f6;
}
.jx-bt>text{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.jx-bt>image{
  width: 11rpx;
  height: 20rpx;
}
.jx-nr{
  width: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 15rpx 0;
}
.jx-nr-img{
  margin: 15rpx;
}
.jx-nr-img>image{
  width: 66rpx;
  height: 66rpx;
  border-radius: 50%;
}

.ql-editor.ql-blank:before {
  /* 此处设置 placeholder 样式 */
  font-style: normal;
  font-size: 30rpx;
  font-weight:400;
  color:rgba(158,158,158,1);
  line-height: 48rpx;
}

/* 按钮 */
.btn{
  width: 100%;
  height:98rpx;
  background:rgba(251,59,57,1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color:rgba(255,255,255,1);
  position: fixed;
  z-index: 99;
  bottom: 0;
  left: 0;
  right: 0;
}